while(1){
 
  rotate platform "x" amount degrees
  if(pest is detected){
    while(1){
      track pest
      get distance 
      if(nozzle is tilted accordingly){
        spray
      }
      else{
        tilt nozzle "y" amount of degrees
        spray
      }
      if(pest detected)
        continue
      else 
        break
    }
  }

}
